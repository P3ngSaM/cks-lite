# Claude API Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Server Configuration
HOST=127.0.0.1
PORT=7860

# MCP Runtime / Bridge (for MCP-dependent skills such as openai-docs)
# 0 = disabled, 1 = enabled
MCP_RUNTIME_ENABLED=0
# Optional bridge URL. If empty and MCP_RUNTIME_ENABLED=1, backend falls back to http://{HOST}:{PORT}/mcp/execute
MCP_BRIDGE_URL=

# Skills execution policy switch
# 0 = enabled, 1 = globally disabled (diagnostics mode)
DISABLE_SKILLS_EXECUTION=0

# Data Directory
DATA_DIR=./data

# Memory Configuration
MEMORY_TOP_K=5
MEMORY_SIMILARITY_THRESHOLD=0.7
VECTOR_WEIGHT=0.7
KEYWORD_WEIGHT=0.3

# Agent Configuration
MODEL_NAME=claude-sonnet-4-5-20250929
MAX_TOKENS=4096
TEMPERATURE=1.0
